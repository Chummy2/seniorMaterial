<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credits">

    <!-- Header for Credits -->
    <TextView
        android:id="@+id/textViewCreditsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Credits"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Credits Content -->
    <TextView
        android:id="@+id/textViewCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I used ChatGPT for the new madlib stories.\nLink: https://chat.openai.com/share/912878ce-82d8-4608-ba0b-95c8fc5713eb"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreditsHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Poem Content -->
    <TextView
        android:id="@+id/textViewPoem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="In the realm of code, ChatGPT stands tall,\nAiding in debugging, it answers the call.\nCrafting stories, a task it does with ease,\nFor creative and technical needs, it aims to please."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCredits"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Header for Directions -->
    <TextView
        android:id="@+id/textViewDirectionsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Directions"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewPoem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Directions Content -->
    <TextView
        android:id="@+id/textViewDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Guess a number between 1-100. You have 10 tries to find the right number. Earn 50 points for a correct guess, and 5 points for each remaining strike. The game resets with a new number after a correct guess."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDirectionsHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Go Back Button -->
    <Button
        android:id="@+id/buttonGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDirections"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
