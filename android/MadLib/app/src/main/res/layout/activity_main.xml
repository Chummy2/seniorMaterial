<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softBeige"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Story Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/firstStory"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="48dp"
                android:textSize="13sp"
                android:text="First Story" />

            <Button
                android:id="@+id/secondStory"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="48dp"
                android:textSize="13sp"
                android:text="Second Story" />

            <Button
                android:id="@+id/thirdStory"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="48dp"
                android:textSize="13sp"
                android:text="Third Story" />

            <Button
                android:id="@+id/randomStory"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="48dp"
                android:textSize="13sp"
                android:text="Random" />
        </LinearLayout>



        <!-- EditText fields for user inputs -->
        <EditText
            android:id="@+id/firstChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Place"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/secondChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adjective"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/thirdChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Animal"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/fourthChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Verb ending in -ing"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/fifthChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Day of the week"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/sixthChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/seventhChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Plural Noun"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <EditText
            android:id="@+id/eighthChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adjective"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/darkGrey" />

        <!-- Action Buttons (Enter and Reset) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/enterButton"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter"
                android:background="@color/skyBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/resetButton"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset"
                android:background="@color/coral"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Output TextView -->
        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/darkGrey" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
